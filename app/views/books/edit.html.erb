<div class="page-header">
  <center>upload book</center>
</div>
<%= form_for @book do |b| %>
<div class="form-group">
<%= b.label :book_name %>
<%= b.text_field :book_name %>
</div>
<div class="form-group">
<%= b.label :book_descriptions %> 
<%= b.text_area :book_descriptions %>
</div>
<div class="form-group">
<%= b.label :book_price %> 
<%= b.number_field :book_price %>
</div>
<div class="form-group">
<%= b.label :image %> 
<%= b.file_field :image %>
</div>
<button type="button" class="btn btn-dark">
<%= b.submit %>
</button>
<% end %>